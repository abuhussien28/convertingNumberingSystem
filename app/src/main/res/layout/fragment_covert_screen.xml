<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CovertScreen">

    <!-- Binary number EditText -->

    <!-- Decimal number EditText -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="199dp"
        android:layout_height="132dp"

        android:layout_marginTop="24dp"
        android:src="@mipmap/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/binaryNumberEditText"
        style="@style/TextFieldRoundInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/drawable_start_binary"
        android:hint="Binary number"
        android:inputType="number"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <!-- Octal number EditText -->

    <!-- Hexadecimal number EditText -->

    <!-- Clear ImageButton -->
    <EditText
        android:id="@+id/hexadecimalNumberEditText"
        style="@style/TextFieldRoundInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/drawable_start_hex"
        android:hint="Hexadecimal number"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/octalNumberEditText"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/octalNumberEditText"
        style="@style/TextFieldRoundInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/drawable_start_octal"
        android:hint="Octal number"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/decimalNumberEditText"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/decimalNumberEditText"
        style="@style/TextFieldRoundInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/drawable_start_decimal"
        android:hint="Decimal number"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/binaryNumberEditText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorEditText"
        android:text="clear"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hexadecimalNumberEditText"
        app:layout_constraintVertical_bias="0.142" />
</androidx.constraintlayout.widget.ConstraintLayout>